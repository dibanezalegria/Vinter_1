<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/test_background_color"
    android:orientation="vertical">

    <!-- Header -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="8dp"
        android:paddingTop="8dp"
        android:gravity="center_vertical"
        android:background="@color/blue_grey_800">

        <ImageButton
            android:id="@+id/activity_test_fab_help"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:padding="6dp"
            android:background="@drawable/custom_button_help"
            android:src="@drawable/ic_help_outline_white_36dp"
            android:textColor="@android:color/white"/>

        <TextView
            android:id="@+id/activity_test_title"
            android:layout_width="0dp"
            android:layout_weight="82"
            android:layout_height="wrap_content"
            android:paddingStart="16dp"
            android:paddingEnd="16dp"
            tools:text="IMF - Index Muscle Function"
            android:textSize="20sp"
            android:textColor="@android:color/white"/>

        <ImageButton
            android:id="@+id/activity_test_fab_notes"
            android:layout_width="0dp"
            android:layout_weight="9"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:padding="6dp"
            android:background="@drawable/custom_button_notes"
            android:src="@drawable/ic_comment_white_24dp"/>
    </LinearLayout>

    <FrameLayout
        android:id="@+id/fragment_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>
</LinearLayout>



