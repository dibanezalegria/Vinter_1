<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/bgOut"
            android:orientation="vertical"
            tools:context="com.example.android.vinter_1.TestActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="30dp"
        android:paddingEnd="30dp"
        android:paddingStart="30dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_weight="90"
                android:gravity="center"
                android:text="IN test"
                android:textAppearance="@style/TextCustomLarge"/>

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/bergs_fab_notes"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="10"
                android:clickable="true"
                android:src="@drawable/ic_comment_white_24dp"
                app:fabSize="mini"/>
        </LinearLayout>

        <!-- Separator -->
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginBottom="30dp"
            android:background="@color/bgBrightOut"/>

        <TextView
            android:id="@+id/bergs_tv1"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bergs_string_q1"
            />

        <RadioGroup
            android:id="@+id/bergs_rg1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bergs_rg_margin_top"
            android:layout_marginStart="@dimen/bergs_rg_margin_start">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="4 = kan ställa sig upp utan att använda händerna och själv hitta balansen"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="3 = kan ställa sig upp självständige med hjälp av händerna"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="2 = kan ställa sig upp med hjälp av händerna efter flera försök"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="1 = behöver minimal hjälp av en person för att ställa sig upp eller för att hitta balansen"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="0 = behöver måttlig ett maximal hjälp av en eller flera personer för att ställa sig upp"/>
        </RadioGroup>

        <TextView
            android:id="@+id/bergs_tv2"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bergs_question_margin_top"
            android:text="@string/bergs_string_q2"
            />

        <RadioGroup
            android:id="@+id/bergs_rg2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/bergs_rg_margin_top"
            android:layout_marginStart="@dimen/bergs_rg_margin_start">

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="4 = kan stå säkert i 2 minuter"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="3 = kan stå 2 minuter med tillsyn"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="2 = kan stå 30 sekunder utan stöd"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="1 = behöver flera försök för att stå 30 sekunder utan stöd"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="0 = kan inte stå 30 sekunder utan stöd"/>
        </RadioGroup>

        <TextView
