            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="3 = kan sitta 2 minuter med tillsyn"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="2 = kan sitta i 30 sekunder"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="1 = kan sitta i 10 sekunder"/>

            <RadioButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/bergs_text_radio_button"
                android:text="0 = kan inte sitta 10 sekunder utan stöd"/>
