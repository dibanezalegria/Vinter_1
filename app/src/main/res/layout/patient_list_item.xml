<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:paddingTop="10dp"
              android:paddingBottom="10dp"
              android:background="@android:color/white"
              android:gravity="center_vertical">

    <ImageView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="10dp"
        android:layout_weight="15"
        android:src="@drawable/ic_person_black_48dp"
        android:tint="#616161"/>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="70"
        android:layout_gravity="center_vertical"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/patient_list_item_id_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="id"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="#616161"
                />

            <TextView
                android:id="@+id/patient_list_item_name_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="name"
                android:textAppearance="?android:textAppearanceLarge"
                android:textColor="#616161"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="10dp"
                android:text="Entrada:"
                android:textAppearance="?android:textAppearanceMedium"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"/>

            <TextView
                android:id="@+id/patient_list_item_entry_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="entrada"
                android:textAppearance="?android:textAppearanceSmall"
                android:textColor="@color/colorPrimary"
                android:textStyle="italic"/>
        </LinearLayout>
    </LinearLayout>

    <ImageButton
        android:id="@+id/patient_list_fab_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:padding="4dp"
        android:background="@drawable/custom_button_help"
        android:src="@drawable/ic_list_white_36dp"
        android:textColor="@android:color/white"/>

</LinearLayout>