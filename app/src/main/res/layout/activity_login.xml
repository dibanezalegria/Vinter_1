<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/blue_grey_900">

    <RelativeLayout
        android:id="@+id/activity_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/blue_grey_900"
        android:padding="64dp"
        tools:context="com.example.android.vinter_1.LoginActivity">

        <ImageView
            android:id="@+id/login_logo_image"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="64dp"
            android:src="@drawable/logo"/>

        <TextView
            android:id="@+id/login_message_tv"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_logo_image"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="48dp"
            android:gravity="center"
            tools:text="Info message"
            android:textColor="@android:color/white"/>

        <TextView
            style="@style/TextCustomSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="v1.2"
            android:layout_below="@id/login_logo_image"
            android:layout_alignParentEnd="true"
            android:textColor="@color/blue_grey_400"/>

        <EditText
            android:id="@+id/login_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_logo_image"
            android:layout_marginTop="76dp"
            android:background="@color/blue_grey_100"
            android:fontFamily="sans-serif"
            android:hint="Username"
            android:inputType="textFilter"
            android:digits="@string/valid_characters"
            android:maxLength="12"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:textSize="24sp"/>

        <EditText
            android:id="@+id/login_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_username"
            android:layout_marginTop="26dp"
            android:background="@color/blue_grey_100"
            android:fontFamily="sans-serif"
            android:hint="Password"
            android:inputType="textPassword"
            android:digits="@string/valid_characters"
            android:maxLength="12"
            android:padding="8dp"
            android:paddingStart="12dp"
            android:textSize="24sp"/>

        <Button
            android:id="@+id/login_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_password"
            android:layout_marginTop="26dp"
            android:background="@drawable/custom_button_spara"
            android:text="Log in"
            android:textColor="@android:color/white"
            android:textSize="22sp"/>

        <TextView
            android:id="@+id/login_register_text"
            style="@style/TextCustomNormal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/login_button"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:clickable="true"
            android:text="@string/login_no_account_yet"
            android:textColor="@android:color/white"/>

        <TextView
            style="@style/TextCustomSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginTop="180dp"
            android:text="@string/copyright"
            android:layout_below="@id/login_register_text"
            android:textColor="@color/blue_grey_400"/>
    </RelativeLayout>
</ScrollView>