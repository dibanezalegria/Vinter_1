                    android:layout_height="wrap_content"
                    android:layout_marginEnd="15dp"
                    android:layout_weight="1"
                    android:gravity="end"
                    android:text="100"
                    android:textAppearance="?android:textAppearanceMedium"
                    />
            </LinearLayout>
