<resources>

    <!-- Base application theme ________________________________________________________________ -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Theme for dialogs -->
    <style name="DialogTheme" parent="@android:style/Theme.Dialog">
        <item name="android:textSize">20sp</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:background">@color/blue_grey_100</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- TextView Output Results ________________________________________________________________-->
    <style name="OutputTextViewStyle">
        <item name="android:background">@drawable/spinner_blue_output_box</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textSize">28sp</item>
    </style>

    <!-- Text Size Defaults _____________________________________________________________________-->
    <style name="TextCustomLarge" parent="TextAppearance.AppCompat.Large">
        <!-- textSize default: 22sp -->
        <item name="android:textSize">20sp</item>
        <item name="android:textColor">@color/textColor</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextCustomNormal" parent="TextAppearance.AppCompat.Medium">
        <!-- textSize default: 18sp -->
        <item name="android:textSize">18sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <style name="TextCustomSmall" parent="TextAppearance.AppCompat.Small">
        <!-- textSize default: 14sp -->
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/textColor</item>
    </style>

    <!-- Style for a tab that displays a category name __________________________________________-->
    <style name="CategoryTab" parent="Widget.Design.TabLayout">
        <item name="tabIndicatorColor">@android:color/white</item>
        <item name="tabSelectedTextColor">@android:color/white</item>
        <item name="tabTextAppearance">@style/CategoryTabTextAppearance</item>
    </style>

    <!-- Text appearance style for a category tab -->
    <style name="CategoryTabTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textColor">#A8A19E</item>
    </style>

    <!-- EQ5D Style _____________________________________________________________________________-->
    <style name="eq5d_text_radio_button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <!-- Use opacity for grey instead of grey color for better results (BE = 75% transparent)-->
        <item name="android:textColor">#be000000</item>
    </style>

    <!-- VAS ____________________________________________________________________________________-->
    <style name="vas_layout_background">
        <!-- Padding -->
        <item name="android:paddingStart">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingEnd">10dp</item>
        <item name="android:paddingBottom">10dp</item>
        <!-- Margins -->
        <item name="android:layout_marginStart">6dp</item>
        <item name="android:layout_marginTop">2dp</item>
        <item name="android:layout_marginBottom">2dp</item>
        <item name="android:layout_marginEnd">6dp</item>
    </style>

    <!-- VAS_IN -->
    <style name="vas_layout_background_in" parent="vas_layout_background">
        <item name="android:background">@color/test_background_color</item>
    </style>

    <!-- VAS_OUT -->
    <style name="vas_layout_background_out" parent="vas_layout_background">
        <item name="android:background">@color/bgOut</item>
    </style>

    <!-- BERGS __________________________________________________________________________________-->
    <style name="bergs_text_radio_button" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18sp</item>
        <!-- Use opacity for grey instead of grey color for better results (BE = 75% transparent)-->
        <item name="android:textColor">#be000000</item>
        <item name="android:paddingStart">6dp</item>
    </style>

    <!-- BDL __________________________________________________________________________________-->
    <style name="bdl_text_radio_button" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18sp</item>
        <!-- Use opacity for grey instead of grey color for better results (BE = 75% transparent)-->
        <item name="android:textColor">#be000000</item>
        <item name="android:paddingStart">6dp</item>
    </style>

    <!-- IMF __________________________________________________________________________________-->
    <style name="imf_text_radio_button" parent="TextAppearance.AppCompat.Small">
        <item name="android:textSize">18sp</item>
        <!-- Use opacity for grey instead of grey color for better results (BE = 75% transparent)-->
        <item name="android:textColor">#be000000</item>
        <item name="android:paddingStart">6dp</item>
    </style>

    <!-- FSA Style _____________________________________________________________________________-->
    <style name="fsa_text_radio_button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">18sp</item>
        <!-- Use opacity for grey instead of grey color for better results (BE = 75% transparent)-->
        <item name="android:textColor">#be000000</item>
        <item name="android:paddingStart">0dp</item>
    </style>

    <!-- FSS Style _____________________________________________________________________________-->
    <style name="fss_text_radio_button" parent="TextAppearance.AppCompat.Medium">
        <item name="android:textSize">16sp</item>
        <!-- Use opacity for grey instead of grey color for better results (BE = 75% transparent)-->
        <item name="android:textColor">#be000000</item>
        <item name="android:paddingStart">0dp</item>
    </style>

</resources>
