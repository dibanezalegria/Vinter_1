<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="com.example.android.vinter_1">

    <uses-permission android:name="android.permission.INTERNET"/>

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".PatientListActivity"
            android:parentActivityName=".LoginActivity">
        </activity>
        <activity
            android:name=".TestListActivity"
            android:parentActivityName=".PatientListActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name=".TestActivity"
            android:parentActivityName=".TestListActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
        </activity>
        <activity
            android:name=".ResultTableActivity"
            android:parentActivityName=".PatientListActivity">
        </activity>

        <activity
            android:name=".LoginActivity"
            android:windowSoftInputMode="adjustResize|stateHidden">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".AdminActivity"
            android:parentActivityName=".LoginActivity">
        </activity>

        <provider
            android:name=".data.DbProvider"
            android:authorities="com.example.android.vinter_1"
            android:exported="false"/>
    </application>

</manifest>